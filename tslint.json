{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "./node_modules/tslint-react/rules"
    ],
    "rules": {
        "indent": "tabs",
        "jsx-alignment": true,
        "jsx-boolean-value": true,
        "jsx-curly-spacing": [true, "never"],
        "jsx-equals-spacing": [true, "never"],
        "jsx-key": true,
        "jsx-no-bind": false,
        "jsx-no-lambda": true,
        "jsx-no-multiline-js": false,
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "max-line-length": {
            "options": [160]
        },
        "member-access": false,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "prefer-for-of": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [160]
        },
        "indent": "tabs"
    }
}
