{
    "compilerOptions": {
        "baseUrl": "./src/",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./build",
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]

}
